<% include ../partials/header %>


<header class="jumbotron my-0">
    <h1>Welcome to events page!</h1>
    <p>View our evets around Japan </p>
    <p>
        <a class="btn btn-primary btn-large" href="/events/new"> add a new campground</a>
    </p>
</header>



<div class="container">

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">

        <% for (var i = 0; i < events.length; i++) { %>
        <div class="col-lg-4">
            <div class="card border-danger shadow-lg p-3 bg-white rounded mb-2">
                <img src="<%= events[i].image %>" class="card-img-topm" alt="location img">
                <div class="card-body">
                    <h2 class="card-title"> <%= events[i].name %> </h2>
                    <a href="/events/<%= events[i]._id %>" class="btn btn-outline-success btn-sm">More Info</a>
                </div>
            </div>
        </div>
        <% } %>

    </div>
</div>

<% include ../partials/footer %>