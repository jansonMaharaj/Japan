<% include ../partials/header %>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <p class="lead">Japan</p>
            <div class="list-group">
                <li class="list-group-item ">info 1</li>
                <li class="list-group-item active">info 2</li>
                <li class="list-group-item ">info 3</li>
            </div>
        </div>
        <div class="col-md-9">
    
            <h1 class="jumbotron justify text-center"><%= location.name%></h1>
            <div class="card">
                <img class="card-img-top" src="<%= location.image%>" alt="">
                <div class="card-body"
                    <p class="card-text"><%= location.description%></p>
                
                ></div>
            </div>
            <hr>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-primary" href="/locations/<%=location._id%>/comments/new">Add New Comment</a>
                </div>
                <% location.comments.forEach(function(comment) {%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="text-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                                <a class="btn btn-xs btn-warning" 
                                    href="/locations/<%=location._id%>/comments/<%=comment._id%>/edit">
                                    Edit
                                </a>
                                <form action="/locations/<%=location._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                            <% } %>
                        </div>
                    </div>
                <%})%>

            </div>
    

    
           
        </div>
    </div>
</div>

<% include ../partials/footer %>