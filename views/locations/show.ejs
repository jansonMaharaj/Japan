<% include ../partials/header %>
<div class="container mt-5">
    <div class="row">

        <div class="col-md-12">

            <div class="card border-0">
                
                
                <div class="card-body">
                    <h1 class="display-4 text-left text-uppercase font-weight-bold"><%= location.name%></h1>
                    <img class="card-img-top" src="<%= location.image%>" alt="">
                    <p class="card-text lead"><%= location.description%></p>
                    <img src="<%= location.imageCity%>" alt="">

                    <p class="card-text lead"><%= location.descriptionCity%></p>

                </div>
            </div>
            <hr>


            <div class="jumbotron">
                <h1 class="display-4">Comment Section</h1>
                <p class="lead">Please let us know what you think</p>
                <hr class="my-4">
                
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-primary" href="/locations/<%=location._id%>/comments/new">Add New Comment</a>
                    </div>
                    <% location.comments.forEach(function(comment) {%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="text-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                            <a class="btn btn-xs btn-warning"
                                href="/locations/<%=location._id%>/comments/<%=comment._id%>/edit">
                                Edit
                            </a>
                            <form action="/locations/<%=location._id%>/comments/<%=comment._id%>?_method=DELETE"
                                method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <%})%>
    
                </div>

              </div>







        </div>
    </div>
</div>

<% include ../partials/footer %>