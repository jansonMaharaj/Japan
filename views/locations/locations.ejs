<% include ../partials/header %>




<div>
    <header class="jumbotron my-0 mb-3">
        <h1>WELCOME TO THE LOCATIONS PAGE!</h1>
        <p>View our locations around Japan </p>
        <!-- <p>
            <a class="btn btn-primary btn-large" href="/locations/new"> add a new campground</a>
        </p> -->
    </header>
</div>


<!--  DISPLAYING ALL LOCATIONS FROM DATABASE -->
<div class="container">
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% for (var i = 0; i < locations.length; i++) { %>
        <div class="col-lg-4">
            <div class="card border-danger shadow-lg p-0 bg-white rounded mb-2">
                <img src="<%= locations[i].image %>" class="card-img-topm" alt="location img">
                <div class="card-body">
                    <h2 class="card-title"> <%= locations[i].name %> </h2>
                    <a href="/locations/<%= locations[i]._id %>" class="btn btn-outline-success btn-sm">More Info</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

