<% include ../partials/header %>


<header class="jumbotron">
    <h1>Welcome to location page!</h1>
    <p>View our locations around Japan </p>
    <p>
        <a class="btn btn-primary btn-large" href="/locations/new"> add a new campground</a>
    </p>
</header>


<div class="container">

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    
        <% for (var i = 0; i < locations.length; i++) { %>
        <div class="col-lg-4 col-sm-6">
    
            <div class="card border-danger mb-2">
                <img src="<%= locations[i].image %>" class="card-img-topm" alt="location img">
                <div class="card-body">
                    <h2 class="card-title"> <%= locations[i].name %> </h2>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="/locations/<%= locations[i]._id %>" class="btn btn-outline-success btn-sm">More Info</a>
                </div>
            </div>
    
    
        </div>
        <% } %>
    
    </div>


</div>

<% include ../partials/footer %>